{% extends ':Default:base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block header %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        #content {
            padding-top: 60px;
        }
    </style>
{% endblock %}

{% block container %}
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading text-center">{{ 'user.recover.message.password_title'|trans|upper }}</div>
            <div class="panel-body">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.password.first) }}
                    {{ form_widget(form.password.first) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password.second) }}
                    {{ form_widget(form.password.second) }}
                </div>
                <button type="submit" class="btn btn-lg btn-block btn-primary">{{ 'user.recover.button.update_password'|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
