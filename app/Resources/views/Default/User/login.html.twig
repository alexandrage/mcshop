{% extends ':Default:base.html.twig' %}

{% block header %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        #content {
            padding-top: 60px;
        }
    </style>
{% endblock %}

{% block container %}
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading text-center">{{ 'login.message.welcome'|trans|upper }}</div>
            <div class="panel-body">
                <form action="{{ path('mc_shop_user_login') }}" method="post">
                    <div class="form-group">
                        <label  for="username">{{ 'login.username'|trans }}</label>
                        <input type="text" class="form-control" name="_username" id="username" placeholder="{{ 'login.username'|trans }}">
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'login.password'|trans }}</label>
                        <input type="password" class="form-control" name="_password" id="password" placeholder="{{ 'login.password'|trans }}">
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="checkbox" name="_remember_me"> {{ 'login.remember_me'|trans }}
                        </label>
                    </div>
                    <div class="row">
                        <div class="col-md-6"><a href="{{ path('mc_shop_user_registration') }}">{{ 'login.message.no_account'|trans }}</a></div>
                        <div class="col-md-6 text-right"><a href="{{ path('mc_shop_user_recover_username') }}">{{ 'login.message.forgot_password'|trans }}</a></div>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-success btn-block btn-lg">{{ 'login.submit'|trans }}</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

